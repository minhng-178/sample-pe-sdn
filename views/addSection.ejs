<h2>Add New Watch</h2>

<form action="/sections" method="POST">
  <div class="form-group">
    <label for="sectionName">Watch Name</label>
    <input
      type="text"
      class="form-control"
      id="sectionName"
      name="sectionName"
      required
    />
    <small class="form-text text-muted">
      Section name should start with a capital letter and can contain letters,
      digits, spaces, and forward slashes.
    </small>
  </div>
  <div class="form-group">
    <label for="sectionDescription">Watch Description</label>
    <textarea
      class="form-control"
      id="sectionDescription"
      name="sectionDescription"
      required
    ></textarea>
  </div>
  <div class="form-group">
    <label for="duration">Duration</label>
    <input
      type="number"
      class="form-control"
      id="duration"
      name="duration"
      required
    />
  </div>
  <div class="form-group form-check">
    <div class="form-group">
      <label>Automatic</label><br />
      <input
        type="radio"
        id="isMainTaskTrue"
        name="isMainTask"
        value="true"
        required
      />
      <label for="isMainTaskTrue">True</label><br />
      <input
        type="radio"
        id="isMainTaskFalse"
        name="isMainTask"
        value="false"
      />
      <label for="isMainTaskFalse">False</label><br />
    </div>
  </div>
  <div class="form-group">
    <label for="course">Brand</label>
    <select class="form-control" id="course" name="courseId" required>
      <% brands.forEach(brands => { %>
      <option value="<%= course._id %>"><%= brands.brandName %></option>
      <% }) %>
    </select>
  </div>
  <div class="mt-2">
    <a href="/dashboard" class="btn btn-secondary">Back</a>
    <button type="submit" class="btn btn-bd-primary">Add Section</button>
  </div>
</form>
